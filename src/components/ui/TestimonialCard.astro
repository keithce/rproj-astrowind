---
export interface Props {
  testimonial: string;
  clientName: string;
  clientTitle?: string;
  clientImage?: string;
  rating?: number;
  className?: string;
}

const { testimonial, clientName, clientTitle, clientImage, rating = 5, className = "" } = Astro.props;
---

<div class={`testimonial-card ${className}`}>
  <div class="bg-white dark:bg-[var(--aw-color-bg-page-dark)] p-6 rounded-lg shadow-lg h-full border border-[var(--aw-color-accent)]/10">
    <!-- Rating Stars -->
    <div class="flex mb-4">
      {Array.from({ length: 5 }, (_, i) => (
        <svg 
          class={`w-5 h-5 ${i < rating ? 'text-[var(--aw-color-accent)]' : 'text-gray-300 dark:text-gray-600'}`}
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>

    <!-- Testimonial Text -->
    <blockquote class="text-[var(--aw-color-text-default)] dark:text-[var(--aw-color-text-default)] mb-6 italic">
      "{testimonial}"
    </blockquote>

    <!-- Client Information -->
    <div class="flex items-center">
      {clientImage && (
        <img 
          src={clientImage} 
          alt={clientName}
          class="w-12 h-12 rounded-full object-cover mr-4"
        />
      )}
      <div>
        <div class="font-semibold text-[var(--aw-color-text-heading)] dark:text-[var(--aw-color-text-heading)]">{clientName}</div>
        {clientTitle && (
          <div class="text-sm text-[var(--aw-color-text-muted)]">{clientTitle}</div>
        )}
      </div>
    </div>

    <!-- Quote Icon -->
    <div class="absolute top-4 right-4 opacity-10 dark:opacity-20">
      <svg class="w-8 h-8 text-[var(--aw-color-accent)]" fill="currentColor" viewBox="0 0 32 32">
        <path d="M10 8c-3.3 0-6 2.7-6 6v10h10V14H8c0-1.1.9-2 2-2V8zm16 0c-3.3 0-6 2.7-6 6v10h10V14h-6c0-1.1.9-2 2-2V8z"/>
      </svg>
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    position: relative;
  }
  
  .testimonial-card blockquote {
    position: relative;
  }
  
  .testimonial-card blockquote::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(to bottom, var(--aw-color-primary), var(--aw-color-accent));
    border-radius: 2px;
  }
</style> 