---
// Supports weights 100-900
import '@fontsource-variable/raleway';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Raleway Variable';
    --aw-font-serif: 'Raleway Variable';
    --aw-font-heading: 'Raleway Variable';

    --aw-color-primary: #6e2765;
    --aw-color-secondary: #42173d;
    --aw-color-accent: #c5a9c1;

    --aw-color-text-heading: #160814;
    --aw-color-text-default: #2c1028;
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-text-page: #2c1028;
    --aw-color-bg-page: #f1e9f0;

    --aw-color-bg-page-dark: #160814;

    ::selection {
      background-color: #e2d4e0;
    }
  }

  .dark {
    --aw-font-sans: 'Raleway Variable';
    --aw-font-serif: 'Raleway Variable';
    --aw-font-heading: 'Raleway Variable';

    --aw-color-primary: #6e2765;
    --aw-color-secondary: #42173d;
    --aw-color-accent: #c5a9c1;

    --aw-color-text-heading: #f1e9f0;
    --aw-color-text-default: #e2d4e0;
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: #160814;

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
