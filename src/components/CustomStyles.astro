---
// Supports weights 100-900
import '@fontsource-variable/raleway';
---

<style is:inline>
  :root {
    /* Font Variables */
    --font-family-primary: 'Raleway Variable', ui-sans-serif, system-ui;
    --font-family-serif: 'Raleway Variable', ui-serif, Georgia;
    --font-family-heading: 'Raleway Variable', ui-sans-serif, system-ui;

    /* Design System Variables */
    --radius: 0.5rem;

    /* Light Theme Colors */
    --color-background: hsl(var(--white));
    --color-foreground: hsl(var(--gray-900));
    --color-card: hsl(var(--white));
    --color-card-foreground: hsl(var(--gray-900));
    --color-popover: hsl(var(--white));
    --color-popover-foreground: hsl(var(--gray-900));
    --color-primary: hsl(var(--brand-600));
    --color-primary-foreground: hsl(var(--brand-50));
    --color-secondary: hsl(var(--gray-600));
    --color-secondary-foreground: hsl(var(--gray-50));
    --color-muted: hsl(var(--gray-200));
    --color-muted-foreground: hsl(var(--gray-500));
    --color-accent: hsl(var(--blue-600));
    --color-accent-foreground: hsl(var(--blue-50));
    --color-border: hsl(var(--gray-200));
    --color-input: hsl(var(--gray-200));
    --color-outline: #6e2765;
    --color-ring: hsl(var(--brand-600));

    /* Status Colors */
    --color-info: #0ea5e9;
    --color-info-foreground: #0c4a6e;
    --color-success: #22c55e;
    --color-success-foreground: #14532d;
    --color-warning: #f59e0b;
    --color-warning-foreground: #92400e;
    --color-error: #dc2626;
    --color-error-foreground: #ffffff;

    /* Legacy AstroWind Variables (for backward compatibility) */
    --aw-font-sans: var(--font-family-primary);
    --aw-font-serif: var(--font-family-serif);
    --aw-font-heading: var(--font-family-heading);
    --aw-color-primary: var(--color-primary);
    --aw-color-secondary: var(--color-secondary);
    --aw-color-accent: var(--color-accent);
    --aw-color-text-heading: var(--color-foreground);
    --aw-color-text-default: #2c1028;
    --aw-color-text-muted: rgba(44, 16, 40, 0.66);
    --aw-color-text-page: #2c1028;
    --aw-color-bg-page: var(--color-background);
    --aw-color-bg-page-dark: #160814;

    /* Text Selection */
    ::selection {
      background-color: var(--color-accent);
      color: var(--color-foreground);
    }
  }

  .dark {
    /* Dark Theme Colors */
    --color-background: hsl(var(--black));
    --color-foreground: hsl(var(--gray-50));
    --color-card: hsl(var(--black));
    --color-card-foreground: hsl(var(--gray-50));
    --color-popover: hsl(var(--black));
    --color-popover-foreground: hsl(var(--gray-50));
    --color-primary: hsl(var(--brand-400));
    --color-primary-foreground: hsl(var(--brand-950));
    --color-secondary: hsl(var(--gray-400));
    --color-secondary-foreground: hsl(var(--gray-950));
    --color-muted: hsl(var(--gray-800));
    --color-muted-foreground: hsl(var(--gray-400));
    --color-accent: hsl(var(--blue-400));
    --color-accent-foreground: hsl(var(--blue-950));
    --color-border: hsl(var(--gray-800));
    --color-input: hsl(var(--gray-800));
    --color-outline: #a87da3;
    --color-ring: hsl(var(--brand-400));

    /* Status Colors (Dark) */
    --color-info: #38bdf8;
    --color-info-foreground: #0c4a6e;
    --color-success: #4ade80;
    --color-success-foreground: #14532d;
    --color-warning: #fbbf24;
    --color-warning-foreground: #92400e;
    --color-error: #ef4444;
    --color-error-foreground: #ffffff;

    /* Legacy AstroWind Variables (Dark Theme) */
    --aw-color-text-heading: var(--color-foreground);
    --aw-color-text-default: #e2d4e0;
    --aw-color-text-muted: rgba(226, 212, 224, 0.66);
    --aw-color-bg-page: var(--color-background);

    /* Dark Text Selection */
    ::selection {
      background-color: var(--color-accent);
      color: var(--color-foreground);
    }
  }

  /* Responsive Typography Scale */
  @media (max-width: 768px) {
    :root {
      font-size: 14px;
    }
  }

  @media (min-width: 1024px) {
    :root {
      font-size: 16px;
    }
  }

  @media (min-width: 1536px) {
    :root {
      font-size: 18px;
    }
  }
</style>
