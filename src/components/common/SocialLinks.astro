---
export interface Props {
  className?: string;
  size?: 'sm' | 'md' | 'lg';
  variant?: 'default' | 'minimal';
}

const { className = '', size = 'md', variant = 'default' } = Astro.props;

const sizeClasses = {
  sm: 'w-8 h-8',
  md: 'w-10 h-10',
  lg: 'w-12 h-12',
};

const iconSizes = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};
---

<div class={`social-links ${className}`}>
  <div class="flex justify-center space-x-4">
    <!-- Instagram -->
    <a
      href="https://instagram.com/yourphotography"
      target="_blank"
      rel="noopener noreferrer"
      class={`${sizeClasses[size]} ${variant === 'default' ? 'bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600' : 'bg-white dark:bg-[var(--aw-color-bg-page-dark)] border border-[var(--aw-color-accent)]/20 hover:bg-[var(--aw-color-accent)]/10 dark:hover:bg-[var(--aw-color-accent)]/20'} rounded-full flex items-center justify-center transition-all duration-200 transform hover:scale-110 shadow-md`}
      aria-label="Follow us on Instagram"
    >
      <svg
        class={`${iconSizes[size]} ${variant === 'default' ? 'text-white' : 'text-[var(--aw-color-primary)] dark:text-[var(--aw-color-accent)]'}`}
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.621 5.367 11.988 11.988 11.988s11.987-5.367 11.987-11.988C24.004 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.447-3.378-1.193l.841-.841c.709.589 1.612.945 2.537.945 2.179 0 3.94-1.760 3.94-3.939S10.628 8.021 8.449 8.021c-.925 0-1.828.356-2.537.945l-.841-.841c.930-.746 2.081-1.193 3.378-1.193 3.006 0 5.439 2.433 5.439 5.439s-2.433 5.439-5.439 5.439z"
        ></path>
      </svg>
    </a>

    <!-- Facebook -->
    <a
      href="https://facebook.com/yourphotography"
      target="_blank"
      rel="noopener noreferrer"
      class={`${sizeClasses[size]} ${variant === 'default' ? 'bg-blue-600 hover:bg-blue-700' : 'bg-white dark:bg-[var(--aw-color-bg-page-dark)] border border-[var(--aw-color-accent)]/20 hover:bg-[var(--aw-color-accent)]/10 dark:hover:bg-[var(--aw-color-accent)]/20'} rounded-full flex items-center justify-center transition-all duration-200 transform hover:scale-110 shadow-md`}
      aria-label="Follow us on Facebook"
    >
      <svg
        class={`${iconSizes[size]} ${variant === 'default' ? 'text-white' : 'text-[var(--aw-color-primary)] dark:text-[var(--aw-color-accent)]'}`}
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
    </a>

    <!-- Pinterest -->
    <a
      href="https://pinterest.com/yourphotography"
      target="_blank"
      rel="noopener noreferrer"
      class={`${sizeClasses[size]} ${variant === 'default' ? 'bg-red-600 hover:bg-red-700' : 'bg-white dark:bg-[var(--aw-color-bg-page-dark)] border border-[var(--aw-color-accent)]/20 hover:bg-[var(--aw-color-accent)]/10 dark:hover:bg-[var(--aw-color-accent)]/20'} rounded-full flex items-center justify-center transition-all duration-200 transform hover:scale-110 shadow-md`}
      aria-label="Follow us on Pinterest"
    >
      <svg
        class={`${iconSizes[size]} ${variant === 'default' ? 'text-white' : 'text-[var(--aw-color-primary)] dark:text-[var(--aw-color-accent)]'}`}
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.347-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624 0 11.99-5.367 11.99-11.988C24.007 5.367 18.641.001 12.017.001z"
        ></path>
      </svg>
    </a>

    <!-- LinkedIn -->
    <a
      href="https://linkedin.com/in/yourphotography"
      target="_blank"
      rel="noopener noreferrer"
      class={`${sizeClasses[size]} ${variant === 'default' ? 'bg-blue-700 hover:bg-blue-800' : 'bg-white dark:bg-[var(--aw-color-bg-page-dark)] border border-[var(--aw-color-accent)]/20 hover:bg-[var(--aw-color-accent)]/10 dark:hover:bg-[var(--aw-color-accent)]/20'} rounded-full flex items-center justify-center transition-all duration-200 transform hover:scale-110 shadow-md`}
      aria-label="Follow us on LinkedIn"
    >
      <svg
        class={`${iconSizes[size]} ${variant === 'default' ? 'text-white' : 'text-[var(--aw-color-primary)] dark:text-[var(--aw-color-accent)]'}`}
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
        ></path>
      </svg>
    </a>

    <!-- YouTube -->
    <a
      href="https://youtube.com/@yourphotography"
      target="_blank"
      rel="noopener noreferrer"
      class={`${sizeClasses[size]} ${variant === 'default' ? 'bg-red-600 hover:bg-red-700' : 'bg-white dark:bg-[var(--aw-color-bg-page-dark)] border border-[var(--aw-color-accent)]/20 hover:bg-[var(--aw-color-accent)]/10 dark:hover:bg-[var(--aw-color-accent)]/20'} rounded-full flex items-center justify-center transition-all duration-200 transform hover:scale-110 shadow-md`}
      aria-label="Subscribe to our YouTube channel"
    >
      <svg
        class={`${iconSizes[size]} ${variant === 'default' ? 'text-white' : 'text-[var(--aw-color-primary)] dark:text-[var(--aw-color-accent)]'}`}
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"
        ></path>
      </svg>
    </a>
  </div>
</div>

<style>
  .social-links a {
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .social-links a:hover {
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
