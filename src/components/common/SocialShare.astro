---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';

export interface Props {
  text: string;
  url: string | URL;
  class?: string;
}

const { text, url, class: className = 'inline-block' } = Astro.props;

const shareLinks = [
  {
    provider: 'twitter',
    title: 'Twitter Share',
    icon: 'tabler:brand-x',
  },
  {
    provider: 'facebook',
    title: 'Facebook Share',
    icon: 'tabler:brand-facebook',
  },
  {
    provider: 'linkedin',
    title: 'Linkedin Share',
    icon: 'tabler:brand-linkedin',
  },
  {
    provider: 'whatsapp',
    title: 'Whatsapp Share',
    icon: 'tabler:brand-whatsapp',
  },
  {
    provider: 'mail',
    title: 'Email Share',
    icon: 'tabler:mail',
  },
];
---

<div class={className}>
  <span class="text-primary align-super font-bold">Share:</span>
  {
    shareLinks.map(link => (
      <Button
        variant="tertiary"
        class="ml-2 rtl:mr-2 rtl:ml-0"
        title={link.title}
        data-aw-social-share={link.provider}
        data-aw-url={url}
        data-aw-text={text}
      >
        <Icon name={link.icon} class="h-6 w-6" />
      </Button>
    ))
  }
</div>
