---
import type { Content as Props } from '~/types';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import RelatedPages from '~/components/ui/RelatedPages.astro';
import { getRelatedPages } from '~/utils/internal-linking';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  isReversed = false,
  isAfterContent = false,
  showRelated = false,
  relatedTitle = 'Explore Related Services',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

// Get related pages if enabled
const relatedPages = showRelated ? getRelatedPages(Astro.url.pathname, 3) : [];
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl',
      title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-xl text-muted-foreground',
    }}
  />
  <div class="p-4 mx-auto max-w-7xl md:px-8">
    <div class={`md:flex ${isReversed ? 'md:flex-row-reverse' : ''} md:gap-16`}>
      <div class="self-center md:basis-1/2">
        {content && <div class="mb-12 text-lg text-foreground/70" set:html={content} />}

        {
          callToAction && (
            <div class="mt-[-40px] mb-8 text-primary">
              <Button variant="link" {...callToAction} />
            </div>
          )
        }

        <ItemGrid
          items={items}
          columns={columns}
          defaultIcon="tabler:check"
          classes={{
            container: `gap-y-4 md:gap-y-8`,
            panel: 'max-w-none',
            title: 'text-lg font-medium leading-6 text-foreground/80 ml-2 rtl:ml-0 rtl:mr-2',
            description: 'text-muted-foreground dark:text-muted-foreground ml-2 rtl:ml-0 rtl:mr-2',
            icon: 'flex h-9 w-9 items-center justify-center rounded-full bg-accent/70 text-gray-50 p-2',
            action: 'text-lg font-medium leading-6 text-foreground/80 ml-2 rtl:ml-0 rtl:mr-2',
          }}
        />
      </div>
      <div aria-hidden="true" class="mt-10 md:mt-0 md:basis-1/2">
        {
          image && (
            <div class="relative m-auto max-w-4xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto w-full bg-gray-500 rounded-lg shadow-lg"
                  width={500}
                  height={500}
                  widths={[400, 768]}
                  sizes="(max-width: 768px) 100vw, 432px"
                  layout="responsive"
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
    </div>

    {
      showRelated && relatedPages.length > 0 && (
        <div class="pt-8 mt-12 border-t border-border">
          <RelatedPages pages={relatedPages} title={relatedTitle} variant="compact" />
        </div>
      )
    }
  </div>
</WidgetWrapper>
