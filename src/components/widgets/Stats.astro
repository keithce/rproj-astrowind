---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="-m-4 flex flex-wrap justify-center text-center">
    {
      stats &&
        stats.map(({ amount, title, icon }) => (
          <div class="dark:md:border-brand-600 w-full min-w-[220px] p-4 text-center sm:w-1/2 md:w-1/4 md:border-r md:last:border-none">
            {icon && (
              <div class="text-primary mx-auto mb-4 flex items-center justify-center">
                <Icon name={icon} class="h-10 w-10" />
              </div>
            )}
            {amount && (
              <div class="font-heading text-brand-600 dark:text-brand-300 text-[2.6rem] font-bold lg:text-5xl xl:text-6xl">
                {amount}
              </div>
            )}
            {title && (
              <div class="text-muted-foreground/60 text-sm font-medium tracking-widest uppercase lg:text-base">
                {title}
              </div>
            )}
          </div>
        ))
    }
  </div>
</WidgetWrapper>
