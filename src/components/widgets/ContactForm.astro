---
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<section class={`contact-form-section ${className}`}>
  <div class="mx-auto max-w-4xl">
    <div class="mb-8 text-center">
      <h2 class="mb-4 text-3xl font-bold text-gray-900 dark:text-white">Let's Create Something Beautiful Together</h2>
      <p class="mx-auto max-w-2xl text-lg text-gray-600 dark:text-gray-300">
        Ready to capture your special moments? Get in touch to discuss your photography needs and let's create memories
        that will last a lifetime.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      <!-- Contact Form -->
      <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-gray-800">
        <form class="space-y-6" action="/api/contact" method="POST">
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <label for="firstName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                First Name *
              </label>
              <input
                type="text"
                id="firstName"
                name="firstName"
                required
                class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>
            <div>
              <label for="lastName" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                Last Name *
              </label>
              <input
                type="text"
                id="lastName"
                name="lastName"
                required
                class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              />
            </div>
          </div>

          <div>
            <label for="email" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
            />
          </div>

          <div>
            <label for="phone" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
              Phone Number
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
            />
          </div>

          <div>
            <label for="eventDate" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
              Event Date (if applicable)
            </label>
            <input
              type="date"
              id="eventDate"
              name="eventDate"
              class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
            />
          </div>

          <div>
            <label for="photographyType" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
              Photography Type *
            </label>
            <select
              id="photographyType"
              name="photographyType"
              required
              class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
            >
              <option value="">Select Photography Type</option>
              <option value="landscape">Landscape Photography</option>
              <option value="portrait">Portrait Photography</option>
              <option value="boudoir">Boudoir Photography</option>
              <option value="maternity">Maternity Photography</option>
              <option value="children">Children Photography</option>
              <option value="family">Family Photography</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label for="message" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
              Tell us about your vision *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-transparent focus:ring-2 focus:ring-blue-500 focus:outline-none dark:border-gray-600 dark:bg-gray-700 dark:text-white"
              placeholder="Describe your photography needs, vision, or any specific requirements..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full rounded-md bg-blue-600 px-6 py-3 font-medium text-white transition-colors duration-200 hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-gray-800">
          <h3 class="mb-6 text-xl font-semibold text-gray-900 dark:text-white">Get in Touch</h3>

          <div class="space-y-4">
            <div class="flex items-center">
              <svg class="mr-3 h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span class="text-gray-600 dark:text-gray-300">hello@yourphotography.com</span>
            </div>

            <div class="flex items-center">
              <svg class="mr-3 h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <span class="text-gray-600 dark:text-gray-300">(555) 123-4567</span>
            </div>

            <div class="flex items-center">
              <svg class="mr-3 h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span class="text-gray-600 dark:text-gray-300">San Francisco Bay Area</span>
            </div>
          </div>
        </div>

        <div class="rounded-lg bg-white p-8 shadow-lg dark:bg-gray-800">
          <h3 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">Response Time</h3>
          <p class="mb-4 text-gray-600 dark:text-gray-300">
            We typically respond to all inquiries within 24 hours. For urgent requests, please call us directly.
          </p>
          <div class="rounded-lg bg-blue-50 p-4 dark:bg-blue-900/20">
            <p class="text-sm text-blue-800 dark:text-blue-200">
              <strong>Pro Tip:</strong> The more details you provide about your vision and requirements, the better we can
              tailor our response to your needs.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-form-section {
    padding: 4rem 1rem;
  }

  @media (max-width: 768px) {
    .contact-form-section {
      padding: 2rem 1rem;
    }
  }
</style>
