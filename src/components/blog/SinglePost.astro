---
import { Icon } from 'astro-icon/components';

import Image from '~/components/common/Image.astro';
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import RelatedPages from '~/components/ui/RelatedPages.astro';
import ContextualLinks from '~/components/ui/ContextualLinks.astro';
import { getRelatedPages, generateLinkSuggestions } from '~/utils/internal-linking';

import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

export const prerender = true;
const { post, url } = Astro.props;

// Generate contextual links based on post content
const postContent = typeof post.content === 'string' ? post.content : '';
const linkSuggestions = generateLinkSuggestions(postContent, Astro.url.pathname);
const relatedPages = getRelatedPages(Astro.url.pathname, 3, true);

// Convert link suggestions to contextual links format
const contextualLinks = linkSuggestions.slice(0, 3).map(suggestion => {
  const pageData = Object.values(import('~/utils/internal-linking').then(m => m.SITE_STRUCTURE));
  return {
    text: `Explore ${suggestion.anchor}`,
    href: suggestion.href,
    icon: 'tabler:arrow-right'
  };
});

// Service-specific links based on post tags/category
const serviceLinks = [
  {
    text: 'Music Production Services',
    href: '/services/rhythm',
    icon: 'tabler:music',
    description: 'Professional audio mixing and mastering'
  },
  {
    text: 'Creative Technology Consulting',
    href: '/services/design',
    icon: 'tabler:settings', 
    description: 'Workflow optimization and tech solutions'
  },
  {
    text: 'Photography & Color Work',
    href: '/services/color',
    icon: 'tabler:camera',
    description: 'Visual storytelling and photography services'
  }
];
---

<section class="py-8 mx-auto sm:py-16 lg:py-20">
  <article data-pagefind-body>
    <header class={post.image ? 'intersect-once intersect-quarter' : 'intersect-once intersect-quarter'}>
      <div class="flex flex-col justify-between max-w-3xl px-4 mx-auto mt-0 mb-2 sm:flex-row sm:px-6 sm:items-center">
        <p>
          <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 text-muted-foreground" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.author && (
              <>
                {' '}
                · <Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 text-muted-foreground" />
                <span class="inline-block">{post.author}</span>
              </>
            )
          }
          {
            post.category && (
              <>
                {' '}
                ·{' '}
                <a class="inline-block hover:underline" href={getPermalink(post.category.slug, 'category')}>
                  {post.category.title}
                </a>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                &nbsp;· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>

      <h1
        class="max-w-3xl px-4 mx-auto text-4xl font-bold tracking-tighter sm:px-6 md:text-5xl leading-tighter font-heading"
      >
        {post.title}
      </h1>
      <p class="max-w-3xl px-4 mx-auto mt-4 mb-8 text-xl text-justify sm:px-6 md:text-2xl text-muted-foreground">
        {post.excerpt}
      </p>

      {
        post.image ? (
          <Image
            src={post.image}
            class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-muted"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post?.excerpt || ''}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="max-w-3xl px-4 mx-auto sm:px-6">
            <div class="border-t border-border" />
          </div>
        )
      }
    </header>
    <div class="max-w-3xl px-6 mx-auto mt-8 prose prose-lg sm:px-6 dark:prose-invert">
      <slot />
    </div>
    <div data-pagefind-ignore class="flex flex-col justify-between max-w-3xl px-6 mx-auto mt-8 sm:px-6 sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={post.title} class="mt-5 align-middle sm:mt-1 text-muted-foreground" />
    </div>
    
    <!-- Contextual Service Promotion -->
    <div class="max-w-3xl px-6 mx-auto mt-12 sm:px-6">
      <div class="border-t border-border pt-8">
        <div class="bg-accent/10 rounded-lg p-6 mb-8">
          <h3 class="text-xl font-semibold text-foreground mb-4">
            Interested in Working Together?
          </h3>
          <p class="text-muted-foreground mb-6">
            If this article resonated with you, explore how our services can help bring your creative projects to life.
          </p>
          
          <ContextualLinks 
            links={serviceLinks}
            inline={true}
          />
        </div>
        
        {relatedPages.length > 0 && (
          <RelatedPages 
            pages={relatedPages}
            title="Continue Exploring"
            variant="compact"
          />
        )}
      </div>
    </div>
  </article>
</section>
