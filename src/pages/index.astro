---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'Resonant Projects — Amplifying your Creative Output with Frequency Resonance',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header {...headerData} isSticky showRssFeed={false} showToggleTheme />
  </Fragment>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Start Project',
        href: getPermalink('/contact#form'),
        // target: '_blank',
        icon: 'tabler:input-spark',
      },
      { text: 'Learn more', href: '#features', variant: 'secondary' },
    ]}
    image={{ src: '~/assets/images/purple_scale_river.svg', alt: 'RProj Hero Image' }}
  >
    <Fragment slot="title">
      <span class="sm:wrap-normal xl:inline">Turn Up Your</span>
      <span class="text-accent highlight"> Creative Frequency</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        <span class="font-bold">From Vision to Vibration - Creating Work That Moves People</span>
        <span class="block mb-1"
          >Guidance through your technical and artistic landscape to help your work achieve its fullest resonance.</span
        >
      </span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="How We Create Resonance"
    subtitle="Harmonizing technical expertise with artistic vision to help creators achieve their highest potential. Each service is crafted to enhance your creative process and amplify your work's impact."
    items={[
      {
        title: 'Resonant Design (Consulting)',
        description:
          'Our unique fusion of technical expertise and artistic sensitivity creates powerful yet intuitive systems for creators. From audio plugins to complete post-production workflows, we design tools that enhance rather than hinder your creative process.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Resonant Rhythm (Audio)',
        description:
          'We blend classical musicianship with digital engineering precision to create sound that moves people. From electronic production to Mastering for Apple Music, our deep understanding of both the technical and emotional aspects of audio ensures your music resonates with authentic power.',
        icon: 'tabler:music',
      },
      {
        title: 'Resonant Color (Photography)',
        description:
          'Through meticulous color grading and visual enhancement, we help your visual story achieve its perfect tonal balance. Our approach combines traditional photography foundations with cutting-edge digital expertise to shape emotion and drive narrative.',
        icon: 'tabler:camera',
      },
      {
        title: 'Resonant Motion (Video)',
        description:
          "We bring dynamic life to your vision through expert post-production and visual effects, informed by natural rhythms and precise timing. Every frame is crafted to maintain your audience's engagement while serving your story's purpose.",
        icon: 'tabler:movie',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-background dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <Note
    icon="tabler:brand-craft"
    title="When art resonates at its true frequency, it transforms both creator and audience."
  />

  <Content
    id="about"
    columns={3}
    items={[
      {
        icon: 'tabler:brand-github',
        callToAction: {
          target: '_blank',
          text: 'Github',
          href: 'https://github.com/keithce',
        },
      },
      {
        icon: 'tabler:brand-instagram',
        callToAction: {
          target: '_blank',
          text: 'Photography Portfolio',
          href: 'https://resonantrhythm.pixieset.com/resonantcolorportfolio/',
        },
      },
      {
        icon: 'tabler:brand-soundcloud',
        callToAction: {
          target: '_blank',
          text: 'Music Portfolio',
          href: 'https://play.reelcrafter.com/tJfSbOHRTXSXT2wf4rkcRw',
        },
      },
    ]}
    image={{
      src: '~/assets/images/portrait_by_tutti.jpg',

      alt: 'Portrait of Keith. Photographed by Tutti del Monte',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="mb-2 text-2xl font-bold tracking-tight text-foreground/80 sm:text-3xl">About me</h2>
      <p>
        Welcome to my creative journey. My work is a testament to my commitment to bringing ideas to life, where each
        pixel becomes a brushstroke in the canvas of imagination.
      </p>
      <br />
      <p>
        I find inspiration in the world around me, whether through the pages of a captivating novel, the intricate
        details of typography, or the vibrant hues of nature during my outdoor escapades.
      </p>
      <br />
      <p>If you're curious to dive deeper into my work, you can follow me:</p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-background/70 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Features3
    title="Skills"
    subtitle="Discover the expertise that allow me to bring innovative solutions to your business."
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Engineering',
        description:
          'Degree in Computer Engineering, Mathematics, Electrical Engineering, and Computer Science, demonstrating strong technical and solution-oriented abilities.',
      },
      {
        title: 'Software Development',
        description:
          'Experience building software for digital processing systems. Proficient in Python, C++, Rust, Java, TypeScript, and more.',
      },
      {
        title: 'Audio Engineering',
        description:
          'Knowledge and experience in audio recording, mixing, and mastering, including work in a professional studio.',
      },
      {
        title: 'System Administration',
        description:
          'Handling of servers, networks, and other IT infrastructure, ensuring smooth operation of digital systems.',
      },
      {
        title: 'Signal Flow',
        description: 'Expertise in signal flow, including audio and video processing, useful for media production.',
      },
      {
        title: 'Personalized Recommendation',
        description: 'Deep research and analysis of products and services to provide intelligent recommendations.',
      },
      {
        title: 'Teaching and Mentoring',
        description:
          'Experience in teaching and mentoring, including leading workshops and providing guidance to students and colleagues.',
      },
      {
        title: 'Adaptability',
        description: 'Quick to adapt to new design trends, technologies, and client preferences.',
      },
      {
        title: 'Holistic Thinking',
        description:
          'Ability to see the big picture and understand the interconnections between different parts of a system.',
      },
      {
        title: 'Photography and Videography',
        description:
          'Skills in photography and videography, including digital and film, useful for visual media production.',
      },
      {
        title: 'Color Grading in Post Production',
        description: 'Skilled in using color to evoke emotions and enhance visual impact.',
      },
      {
        title: 'Bi-Lingual',
        description: 'Bilingual in English and Italian, bringing a unique perspective and cultural understanding.',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Let's bring your vision to life together – here's how we'll make it happen."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Start Project</span>',
        description:
          "Ready to get started? Fill out the 'Start Project' form to share your ideas and requirements. This is where you tell me about your vision and what you're hoping to achieve.",
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Book a Call</span>',
        description:
          "Let's connect! We'll schedule a friendly conversation to dive deeper into your project, discuss possibilities, and get to know each other better. This is where the magic begins.",
        icon: 'tabler:phone',
      },
      {
        title: 'Step 3: <span class="font-medium">Proposal & Agreement</span>',
        description:
          "I'll craft a detailed proposal outlining the project scope, timeline, and investment. Once we're aligned on expectations and terms, we'll finalize everything and get ready to create something amazing.",
        icon: 'tabler:file-text',
      },
      {
        title: 'Your Vision Comes to Life!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/journey-timeline-transparent.png',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Creators & Resources I Trust"
    subtitle="A curated collection of creators, educators, and resources that have influenced my creative journey and continue to inspire my work."
    tagline="Recommendations"
    items={[
      {
        title: 'Andrew Huang',
        description:
          'Prolific music producer and educator known for genre-hopping songs, creative sound design, and YouTube tutorials.',
        icon: 'tabler:music',
        callToAction: {
          text: 'Visit Channel',
          href: 'https://www.youtube.com/channel/UCdcemy56JtVTrsFIOoqvV8g',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'Cullen Kelly',
        description:
          'Professional colorist and educator sharing advanced DaVinci Resolve color management and look development.',
        icon: 'tabler:palette',
        callToAction: {
          text: 'Visit Channel',
          href: 'https://www.youtube.com/c/CullenKelly',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'Potato Jet',
        description: 'Cinematography gear reviews and filmmaking tips with a fun, unpretentious vibe.',
        icon: 'tabler:camera',
        callToAction: {
          text: 'Visit Channel',
          href: 'https://www.youtube.com/potatojet',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'The Pragmatic Engineer',
        description:
          'Software engineering newsletter covering tech leadership, engineering culture, and industry trends.',
        icon: 'tabler:code',
        callToAction: {
          text: 'Visit Site',
          href: 'https://pragmaticengineer.com/',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'EDMProd',
        description: 'Electronic music production education with courses, articles, and podcasts for modern producers.',
        icon: 'tabler:headphones',
        callToAction: {
          text: 'Visit Site',
          href: 'https://www.edmprod.com/',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'Jim Nix',
        description: 'Travel photographer sharing editing tutorials, creative workflows, and photo inspiration.',
        icon: 'tabler:photo',
        callToAction: {
          text: 'Visit Channel',
          href: 'https://www.youtube.com/@JimNix',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'MKBHD',
        description: 'High-production tech reviews, cameras, EVs, and creator interviews.',
        icon: 'tabler:device-mobile',
        callToAction: {
          text: 'Visit Channel',
          href: 'https://www.youtube.com/MKBHD',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'Todd Henry',
        description: 'Author and host of Accidental Creative on leadership and creating on demand.',
        icon: 'tabler:bulb',
        callToAction: {
          text: 'Visit Site',
          href: 'https://accidentalcreative.com/',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
      {
        title: 'Marc Champagne',
        description:
          'Mental fitness strategist and author of Personal Socrates, hosting thoughtful interviews and prompts.',
        icon: 'tabler:brain',
        callToAction: {
          text: 'Visit Site',
          href: 'https://www.marccchampagne.com/',
          target: '_blank',
          variant: 'link',
          icon: 'tabler:external-link',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-accent/50"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find More in My Blog"
    information={'Articles about my work and the tools I use to create it. Past Newsletters and other content.'}
    showContextualLinks={false}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Project',
        href: getPermalink('/contact#form'),
        icon: 'tabler:input-spark',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Create Something That Resonates? </Fragment>

    <Fragment slot="subtitle">
      Let's work together to bring your creative vision to life with the power of resonant design, audio, and visual
      storytelling.
    </Fragment>
  </CallToAction>
</Layout>
