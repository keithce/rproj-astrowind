  {
    src: 'samples/maternity/couple-expecting',
    alt: 'Expecting couple in intimate maternity session',
    title: 'Growing Love',
  },
  { src: 'samples/children/siblings', alt: 'Sweet sibling portrait showing their bond', title: 'Sibling Bond' },
