---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import NotionContact from '~/components/widgets/NotionContact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <NotionContact id="form" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="How We Can Help You"
    items={[
      {
        title: 'Project Consultation',
        description: `Get personalized guidance on your creative projects. Whether you're starting a new venture or need expert advice on existing work, we're here to help you succeed.`,
      },
      {
        title: 'Service Inquiries',
        description:
          'Learn about our design services, custom solutions, and collaboration opportunities. We offer tailored approaches to meet your specific needs and goals.',
      },
      {
        title: 'Technical Support',
        description:
          'Need help with implementation, troubleshooting, or integration? Our team provides comprehensive technical guidance to ensure your projects run smoothly.',
      },
      {
        title: 'Response Time',
        description:
          'We typically respond within 24 hours during business days. For urgent matters, please mention it in your message.',
        icon: 'tabler:clock',
      },
      {
        title: 'Preferred Contact',
        description:
          'We prefer email communication for detailed discussions and project planning. This allows us to provide thorough, thoughtful responses.',
        icon: 'tabler:mail',
      },
      {
        title: 'Service Areas',
        description:
          'We work with clients globally, offering remote consultations and digital services. Location is never a barrier to great collaboration.',
        icon: 'tabler:world',
      },
    ]}
  />
</Layout>
