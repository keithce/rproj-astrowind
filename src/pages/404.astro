---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Button from '~/components/ui/Button.astro';

import { headerData, footerData } from '~/navigation';

const metadata = {
  title: 'Page not found',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header {...headerData} isSticky showRssFeed showToggleTheme />
  </Fragment>
  <section>
    <div class="mx-auto max-w-xl px-4 py-16 text-center sm:px-6 lg:py-20">
      <h1 class="leading-tighter font-heading mb-4 text-2xl font-bold tracking-tighter md:text-3xl">
        <span class="text-primary">404</span> Not Found
      </h1>
      <p class="text-muted dark:text-muted-foreground mt-4 mb-8 text-lg">
        The page you are looking for does not exist.
      </p>
      <Button variant="primary" href="/">Go back to homepage</Button>
    </div>
  </section>
  <Fragment slot="footer">
    <Footer {...footerData} />
  </Fragment>
</Layout>
