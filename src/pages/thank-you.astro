---
export const prerender = true;

import PageLayout from '~/layouts/PageLayout.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';
import BookACall from '~/utils/book-a-call';
---

<PageLayout>
  <WidgetWrapper containerClass="max-w-2xl mx-auto">
    <Headline
      title="Thank you for reaching out to Resonant Projects .ART!"
      subtitle="We're grateful for your message and excited to connect."
      tagline="You're in good company."
      classes={{
        container: 'mb-8 md:mb-12 text-center',
        title: 'text-4xl md:text-5xl font-bold tracking-tighter mb-4 font-heading text-foreground',
        subtitle: 'text-xl text-muted-foreground',
      }}
    />

    <div class="border-accent-foreground mb-12 border">
      <p class="text-foreground mx-auto mb-8 text-xl leading-relaxed">
        We've received your message and will get back to you soon. In the meantime, here are your next steps:
      </p>

      <ItemGrid
        items={[
          {
            title: 'Book a free discovery call to discuss your project and vision.',
            icon: 'tabler:phone',
            callToAction: {
              text: 'Book Call',
              href: '#book-call',
              variant: 'link',
            },
          },
          {
            title: 'Follow our newsletter for thoughtful insights on music, technology, and spiritual evolution.',
            icon: 'tabler:mail',
            callToAction: {
              text: 'Join Newsletter',
              href: '#newsletter',
              variant: 'link',
            },
          },
        ]}
        columns={1}
        classes={{
          container: 'mx-auto gap-6',
          panel: 'p-6 rounded-lg border border-accent-foreground/50 bg-accent/20',
          title: 'text-lg font-medium leading-relaxed',
          icon: 'w-8 h-8 text-primary pr-2',
        }}
      />
    </div>

    <div id="book-call" class="mb-8 flex flex-col justify-center gap-4 sm:flex-row">
      <div class="w-full">
        <BookACall client:only="react" />
      </div>
    </div>

    <div id="newsletter" class="mb-8 flex justify-center">
      <div
        class="border-accent bg-accent/15 flex w-full max-w-md flex-col items-center justify-center rounded-lg border p-6 shadow-md backdrop-blur-sm"
      >
        <div class="mb-4 text-center">
          <h3 class="text-primary mb-2 text-xl font-semibold">Stay Connected</h3>
          <p class="text-muted-foreground text-sm">
            Get thoughtful insights on music, technology, and spiritual evolution.
          </p>
        </div>
        <Button
          variant="primary"
          href="https://newsletter.resonantprojects.art/"
          target="_blank"
          text="Join the Newsletter"
          icon="tabler:mail"
          class="w-full max-w-xs"
        />
      </div>
    </div>

    <div class="text-muted-foreground text-center text-sm">
      <span>We look forward to connecting with you!<br />â€” The Resonant Projects Team</span>
    </div>
  </WidgetWrapper>
</PageLayout>
